//SHARED POPOUT
#popup
  position: absolute
  margin: 0px
  padding: 5px 10px 5px 10px
  width: 300px
  min-height: 500px
  background: white
  z-index: 5 
  border-radius: 3px
  border: 1px solid #D6DADC
  color: #8c8c8c
  select
    height: 40px
    width: 160px
    margin-bottom: 5px
    border-radius: 3px
  h2
    margin-bottom: 5px
  input
    margin-bottom: 8px
  a.close_pop
    position: absolute
    float: right
    padding: 10px
    margin: 0px
    top: 0px
    right: 0px
    text-decoration: none
    line-height: 20px
    font-size: 20px
    font-weight: 600px
    text-align: center
    color: #8c8c8c
    &:hover
      color: #111;
  a.go_back
    position: absolute
    float: left
    padding: 10px
    top: -5px
    left: 5px
    margin: 0px
    text-decoration: none
    line-height: 20px
    font-size: 20px
    font-weight: 600px
    text-align: center
    color: #8c8c8c
    &:hover
      color: #111;
  h1.pop
    font-size: 16px
    color: #8c8c8c
    margin: 0 0 10px 0
    padding: 15px 0 0 0 
    display: block
    text-align: center
    border-bottom: 1px solid #D6DADC
    padding-bottom: 5px
 
