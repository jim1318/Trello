//LABEL SELECTOR POPOUT--------------------------------------------
.label_selector
  top: 90px
  left: 10px
  div.label_search
    border: 1px solid #D6DADC
    border-radius: 3px
    background: #E2E4E6
    height: 40px
    display: block
    margin: 10px 5px 10px 5px
  ul.selector_list
    padding: 5px
    li.label_select_view
      display: block
      vertical-align: top
      margin: 10px 0 0 0 
      padding: 0px
      div
        margin: 0px
        padding: 0px
        display: inline-block
        vertical-align: top
        div.before, div.after
          height: 18px
          padding: 8px   
          margin: 0px
          display: inline-block
        div.before
          display: none
          width: 8px
          min-width: 0px
          padding: 8px 0 8px 0
          border-top-left-radius: 3px
          border-bottom-left-radius: 3px
          border-top-right-radius: 0px
          border-bottom-right-radius: 0px
          background-image: none
        div.after
          padding: 8px
          width: 220px
          border-radius: 3px      
          display: inline-block
          span
            font-size: 14px
            font-weight: bold
            color: black
            margin: 0 auto
        &:hover
          cursor: pointer
          .before
            display: inline-block  
          .after
            width: 212px  
            border-top-left-radius: 0px
            border-bottom-left-radius: 0px
      a
        display: inline-block
        vertical-align: top
        margin: 0 0 0 3px
        width: 18px
        height: 18px
        padding: 8px
        border-radius: 3px
        color: grey
        &:hover
          background: #D6DADC
          color: black
        &:before
          color: grey
          content: "\1F589"
          position: relative
          right: 0px
          bottom: 5px
          
