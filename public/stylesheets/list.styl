@import "mixins"

//SINGLE LIST OF CARDS
li.list
  margin: 10px 0 10px 10px
  padding: 10px
  float: left
  border-radius: 3px
  width: 270px
  min-height: 185px
  background: colors.list_bg
  padding: 5px
  position: relative
  box-sizing: border-box
  //overflow: visible
  div.list_header
    clear_float()
    div.list_name_holder
      h1
        color: #4d4d4d
        font-size: 18px
        line-height: 1.2em
        float: left
        display: block
        margin: 0 auto
        text-align: center 
      textarea
        display: none
        float: left
        height: 27px
    div.list_subscribed
      width: 20px
      height: 20px
      float: right
      &:before
        content: "\1F441"
        position: relative
        left: 2px
    a
      margin-left: 15px
      padding: 5px
      float: right
  ul.list_card_holder
    min-height: 100px
      
//ADD CARD section on each list----------------------------------------------------------

a.add_card
  display: block
  margin: 10px -5px -5px -5px
  border-bottom-right-radius: 3px
  border-bottom-left-radius: 3px
  color: #8c8c8c
  box-sizing: border-box
  padding: 8px 0 8px 10px
  &:hover
    background-color: #CDD2D4
    color: #4d4d4d
    text-decoration: underline

//SECTION TO ADD NEW CARD TO EACH LIST----------------------------------------------------    
div.card_composer
  display: none  
  margin: 10px 10px 10px 10px
  box-sizing: border-box
  textarea
    width: 240px
    height: 54px
    box-sizing: border-box
    