//CARD DETAIL MODAL----------------------------------------------------
#modal
  display: none
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1
  background: rgba(0, 0, 0, .6)
#overlay
  width: 100%
  height: 100%
  margin: 0px auto

//CARD DETAILS----------------------------------------------------
.card_detail
  min-height: 700px
  width: 550px
  margin: 50px auto 0 auto
  background: #EDEFF0
  position: relative
  border-radius: 3px
  padding: 10px 10px 10px 60px
  z-index: 3
  overflow: auto
  clear_float()
  a.close
    font-size: 25px
  h1
    font-size: 18px
    font-weight: 700
    line-height: 22px
    color: #4d4d4d
  h2
    font-size: 16px
    font-weigth: 700
    line-height: 20px
    color: #4d4d4d
  h3, p, a
    //display: block
    margin-top: 5px
    font-size: 14px
    line-height: 18px
    color: #8c8c8c
    font-weight: normal
  h3
    margin-top: 20px
  
  .card_detail_header
    color: #4d4d4d
    position: relative
    display: block
    margin-right: 50px
    p, a, div
      display: inline-block
    a
      text-decoration: underline
    h1
      position: relative
    &:before
      font-size: 30px
      height: 30px
      width: 30px
      color: #ababab
      content: "\1F4B3"
      position: absolute
      left: -50px
      top: -10px
    div
      margin-left: 8px

  
  //SIDEBAR--------------------------------------------------------------------------------
  .card_detail_sidebar
    float: right
    padding: 0px 10px 0px 0px
    ul 
      display: block
      margin-bottom: 15px
      li
        display: block
        margin: 8px 0 0 0 
        padding: 7px 7px 7px 7px
        border: 1px solid #E2E4E6
        border-bottom-color: #CDD2D4
        border-radius: 3px
        background: #F8F9F9
        height: 25px
        min-width: 120px
        a.card_detail_button
          display: block
          color: #000000
          width: 100%
          height 100%
          font-size: 14px
          line-height: 20px
          font-weight: 700
          cursor: pointer
          text-decoration: none
          span.green_check
            width: 18px
            height: 18px
            padding: 2px 4px
            margin: 0 0 0 8px
            background: #61BD4F
            border-radius: 3px
            color: #ffffff
            &:before
              content: "\2714"
        &:hover
          background: #298FCA
          border-color: #298FCA
          border-bottom-color: #026AA7
          a
            color: #fffff
        #a_due_date
          position: relative
     
  //MAIN SECTION
  .card_detail_main
    float: left
    .card_d_labels, .card_d_date, .card_d_descr, .card_d_comm, .card_d_activ
      margin: 10px 0 20px 0
      position: relative
    .card_d_comm, .card_d_activ
      margin-top: 25px 
      &:before
        color: #ababab
        font-size: 30px
        height: 30px
        width: 30px
        position: absolute
        left: -50px
        top: -10px
    //Due Date
    .card_d_date
      div.date_holder
        a
          text-decoration: underline
          padding: 5px
          display: inline-block
        a.icon_late_date
          color: #ffffff
          &:before
            color: #ffffff


    //Edit Description
    .card_d_descr
      a.edit_descr
        text-decoration: underline
      .descr_edit
        display: none  
        margin: 10px 10px 10px 10px
        box-sizing: border-box
        textarea
          border-radius: 3px
          border: none
          maring-bottom: 5px
          padding: 5px
          width: 240px
          height: 54px
          resize: none
          box-sizing: border-box
    
    //Add Comment
    .card_d_comm
      textarea
        display: block
        border-radius: 3px
        width: 350px
        border: none
        margin: 10px auto 10px 0
        padding: 5px
        height: 54px
        resize: none
        box-sizing: border-box
      input.grey_button
        display: block
        heigth: 24px
        line-height: 22px
        margin: 10px 0 0 0
        padding: 5px
        shadow: none
        border: none
        background: grey
        color: dark grey
        &:hover
          cursor: pointer
          font-weight: 700
          border-radius: 3px
      &:before
        content: "\1F5E9"

    //View Card Activity
    .card_d_activ      
      &:before
        content: "\2636"
        

//DISPLAY LABELS ON CARD DETAIL VIEW--------------------------------------------------------
//------------------------------------------------------------------------------------------
.card_d_labels
  display: block
  margin: 10px 0
  position: relative
  max-width: 400px
  .card_details_label_list
    position: relative
    clear_float() 
    li
      display: inline-block
      float: left
      position: relative
      cursor: pointer
      div
        margin: 5px
        padding: 5px
        min-width: 20px
        height: 20px
        border-radius: 3px
        span
          display: block
          color: black
          font-weight: 700
          line-height: 20px
          margin: 0 auto
        a
          margin: 0px
          display: block
          color: white
          font-weight: 700
          line-height: 20px
          font-size: 20px
          text-align: center
    